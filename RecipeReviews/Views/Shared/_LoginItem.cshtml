@using RecipeReviews.Controllers

<li id ="loginNavItem" class="nav-item w-25">
    <a id="btnLoginDropdown" class="btn btn-secondary dropdown-toggle bg-light text-dark" href="#" role="button" data-toggle="dropdown" aria-haspopup="true">
        Sign In
    </a>
    <div id="loginDropdown" class="dropdown-menu dropdown-menu-right" aria-labelledby="loginDiv">

        @using (@Html.BeginForm("SignIn", "Account", FormMethod.Post, new { id = "loginForm", @class = "p-3", onsubmit = "return loginAjaxPost(this);" }))
        {
            <div class="form-group">
                <label for="Username" class="control-label">Username</label>
                <input id="Username" name="Username" class="form-control w-100" required />
                <span id=@AccountController.UsernameErrorId class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Password" class="control-label">Password</label>
                <input id="Password" name="Password" class="form-control w-100" type="password" required />
                <span id=@AccountController.PasswordErrorId class="text-danger"></span>
            </div>
            <button type="submit" id="btnLogin" class="btn btn-success btn-sm">Submit</button>
            <br />
            <span id=@AccountController.LoginErrorId class="text-danger"></span>
        }
        @Html.ActionLink("Not a member? Click here to register!", "Create", "Account", null, new { @class = "p-4" })
    </div>

</li>